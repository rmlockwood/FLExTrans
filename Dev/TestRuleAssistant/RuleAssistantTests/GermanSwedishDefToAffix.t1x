<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE transfer PUBLIC "-//XMLmind//DTD transfer//EN" "transfer.dtd">
<transfer>
  <section-def-cats>
    <def-cat n="c_def">
      <cat-item tags="def" />
      <cat-item tags="def.*" />
    </def-cat>
    <def-cat n="c_n">
      <cat-item tags="n" />
      <cat-item tags="n.*" />
    </def-cat>
    <def-cat n="c_def_defid">
      <cat-item tags="def.defid" />
      <cat-item tags="def.defid.*" />
      <cat-item tags="def.*.defid" />
      <cat-item tags="def.*.defid.*" />
    </def-cat>
  </section-def-cats>
  <section-def-attrs>
    <!--Part-of-speech tags used in the rules-->
    <def-attr n="a_gram_cat">
      <attr-item tags="def" />
      <attr-item tags="n" />
    </def-attr>
    <def-attr n="a_number_feature">
      <attr-item tags="pl" />
      <attr-item tags="sg" />
    </def-attr>
  </section-def-attrs>
  <section-def-vars>
    <!--Used by macro m_n_affix_from_def-->
    <def-var n="v_n_affix_from_def" />
  </section-def-vars>
  <section-def-macros>
    <def-macro n="m_n_affix_from_def" npar="1" c="FTM v_n_affix_from_def n def">
      <!--Item 1 is part-of-speech def.-->
      <!--Clear the variable to be sure we don't accidentally retain a prior value-->
      <let>
        <var n="v_n_affix_from_def" />
        <lit v="" />
      </let>
      <!--Narrow the set of possible values based on number (pl, sg) given definiteness = defid.-->
      <choose>
        <!--Set v_n_affix_from_def based on number = pl.-->
        <when>
          <test>
            <equal>
              <clip pos="1" side="sl" part="a_number_feature" />
              <lit-tag v="pl" />
            </equal>
          </test>
          <let>
            <var n="v_n_affix_from_def" />
            <lit-tag v="no-affix-for-defid-pl" />
          </let>
        </when>
        <!--Set v_n_affix_from_def based on number = sg.-->
        <when>
          <test>
            <equal>
              <clip pos="1" side="sl" part="a_number_feature" />
              <lit-tag v="sg" />
            </equal>
          </test>
          <!--Possible values with this combination of tags: DEF_SG_C, DEF_SG_N-->
          <let>
            <var n="v_n_affix_from_def" />
            <lit-tag v="multiple-affix-for-defid-sg" />
          </let>
        </when>
        <otherwise>
          <let>
            <var n="v_n_affix_from_def" />
            <lit-tag v="no-affix-for-defid" />
          </let>
        </otherwise>
      </choose>
    </def-macro>
  </section-def-macros>
  <section-rules>
    <rule comment="Def">
      <pattern>
        <pattern-item n="c_def_defid" />
        <pattern-item n="c_n" />
      </pattern>
      <action>
        <!--Generate and output n-->
        <!--Determine the appropriate affix for n and store it in a variable named v_n_affix_from_def.-->
        <call-macro n="m_n_affix_from_def">
          <with-param pos="1" />
        </call-macro>
        <out>
          <lu>
            <get-case-from pos="1">
              <clip pos="2" side="tl" part="lem" />
            </get-case-from>
            <clip pos="2" side="tl" part="a_gram_cat" />
            <var n="v_n_affix_from_def" />
          </lu>
        </out>
      </action>
    </rule>
  </section-rules>
</transfer>