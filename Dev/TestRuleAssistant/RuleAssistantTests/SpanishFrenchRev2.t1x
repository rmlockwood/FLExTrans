<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE transfer PUBLIC "-//XMLmind//DTD transfer//EN" "transfer.dtd">
<transfer>
  <section-def-cats>
    <def-cat n="c_def">
      <cat-item tags="def" />
      <cat-item tags="def.*" />
    </def-cat>
    <def-cat n="c_n">
      <cat-item tags="n" />
      <cat-item tags="n.*" />
    </def-cat>
    <def-cat n="c_adj">
      <cat-item tags="adj" />
      <cat-item tags="adj.*" />
    </def-cat>
    <def-cat n="c_indf">
      <cat-item tags="indf" />
      <cat-item tags="indf.*" />
    </def-cat>
  </section-def-cats>
  <section-def-attrs>
    <!--Part-of-speech tags used in the rules-->
    <def-attr n="a_gram_cat">
      <attr-item tags="adj" />
      <attr-item tags="def" />
      <attr-item tags="indf" />
      <attr-item tags="n" />
    </def-attr>
    <def-attr n="a_n_number_affixes">
      <attr-item tags="PL" />
    </def-attr>
    <def-attr n="a_gender_feature">
      <attr-item tags="?" />
      <attr-item tags="f" />
      <attr-item tags="m" />
    </def-attr>
  </section-def-attrs>
  <section-def-vars>
    <!--Used by macro m_n_gender_or_m-to-adj_gender-->
    <def-var n="v_adj_gender" />
    <!--Used by macro m_n_number_or_sg-to-adj_number-->
    <def-var n="v_adj_number" />
    <!--Used by macro m_def_lemma_from_n-->
    <def-var n="v_def_lemma_from_n" />
    <!--Used by macro m_indf_lemma_from_n-->
    <def-var n="v_indf_lemma_from_n" />
  </section-def-vars>
  <section-def-macros>
    <def-macro n="m_def_lemma_from_n" npar="1" c="FTM v_def_lemma_from_n def n">
      <!--Item 1 is part-of-speech n.-->
      <!--Clear the variable to be sure we don't accidentally retain a prior value-->
      <let>
        <var n="v_def_lemma_from_n" />
        <lit v="" />
      </let>
      <!--Narrow the set of possible values based on number (pl).-->
      <choose>
        <!--Set v_def_lemma_from_n based on number = pl.-->
        <when>
          <test>
            <equal>
              <clip pos="1" side="tl" part="a_n_number_affixes" />
              <lit-tag v="PL" />
            </equal>
          </test>
          <let>
            <var n="v_def_lemma_from_n" />
            <lit v="les1.1" />
          </let>
        </when>
        <otherwise>
          <!--Set v_def_lemma_from_n based on number = sg.-->
          <!--Narrow the set of possible values based on gender (f, m) given number = sg.-->
          <choose>
            <!--Set v_def_lemma_from_n based on gender = f.-->
            <when>
              <test>
                <equal>
                  <clip pos="1" side="tl" part="a_gender_feature" />
                  <lit-tag v="f" />
                </equal>
              </test>
              <let>
                <var n="v_def_lemma_from_n" />
                <lit v="la1.1" />
              </let>
            </when>
            <!--Set v_def_lemma_from_n based on gender = m.-->
            <when>
              <test>
                <equal>
                  <clip pos="1" side="tl" part="a_gender_feature" />
                  <lit-tag v="m" />
                </equal>
              </test>
              <let>
                <var n="v_def_lemma_from_n" />
                <lit v="le1.1" />
              </let>
            </when>
            <otherwise>
              <let>
                <var n="v_def_lemma_from_n" />
                <lit v="no-lemma-for-sg" />
              </let>
            </otherwise>
          </choose>
        </otherwise>
      </choose>
    </def-macro>
    <def-macro n="m_n_gender_or_m-to-adj_gender" npar="1">
      <!--Clear the variable to be sure we don't accidentally retain a prior value-->
      <let>
        <var n="v_adj_gender" />
        <lit v="" />
      </let>
      <choose>
        <when>
          <test>
            <equal>
              <clip pos="1" side="tl" part="a_gender_feature" />
              <lit-tag v="f" />
            </equal>
          </test>
          <let>
            <var n="v_adj_gender" />
            <lit-tag v="FEM_a" />
          </let>
        </when>
        <when>
          <test>
            <equal>
              <clip pos="1" side="tl" part="a_gender_feature" />
              <lit-tag v="?" />
            </equal>
          </test>
          <let>
            <var n="v_adj_gender" />
            <lit-tag v="?-NOTAG" />
          </let>
        </when>
        <otherwise>
          <let>
            <var n="v_adj_gender" />
            <lit v="" />
          </let>
        </otherwise>
      </choose>
    </def-macro>
    <def-macro n="m_n_number_or_sg-to-adj_number" npar="1">
      <!--Clear the variable to be sure we don't accidentally retain a prior value-->
      <let>
        <var n="v_adj_number" />
        <lit v="" />
      </let>
      <choose>
        <when>
          <test>
            <equal>
              <clip pos="1" side="tl" part="a_n_number_affixes" />
              <lit-tag v="PL" />
            </equal>
          </test>
          <let>
            <var n="v_adj_number" />
            <lit-tag v="PL3" />
          </let>
        </when>
        <otherwise>
          <let>
            <var n="v_adj_number" />
            <lit v="" />
          </let>
        </otherwise>
      </choose>
    </def-macro>
    <def-macro n="m_indf_lemma_from_n" npar="1" c="FTM v_indf_lemma_from_n indf n">
      <!--Item 1 is part-of-speech n.-->
      <!--Clear the variable to be sure we don't accidentally retain a prior value-->
      <let>
        <var n="v_indf_lemma_from_n" />
