      </let>
      <!--Narrow the set of possible values based on number (pl).-->
      <choose>
        <!--Set v_indf_lemma_from_n based on number = pl.-->
        <when>
          <test>
            <equal>
              <clip pos="1" side="tl" part="a_n_number_affixes" />
              <lit-tag v="PL" />
            </equal>
          </test>
          <let>
            <var n="v_indf_lemma_from_n" />
            <lit v="des1.1" />
          </let>
        </when>
        <otherwise>
          <!--Set v_indf_lemma_from_n based on number = sg.-->
          <!--Narrow the set of possible values based on gender (f, m) given number = sg.-->
          <choose>
            <!--Set v_indf_lemma_from_n based on gender = f.-->
            <when>
              <test>
                <equal>
                  <clip pos="1" side="tl" part="a_gender_feature" />
                  <lit-tag v="f" />
                </equal>
              </test>
              <let>
                <var n="v_indf_lemma_from_n" />
                <lit v="une1.1" />
              </let>
            </when>
            <!--Set v_indf_lemma_from_n based on gender = m.-->
            <when>
              <test>
                <equal>
                  <clip pos="1" side="tl" part="a_gender_feature" />
                  <lit-tag v="m" />
                </equal>
              </test>
              <let>
                <var n="v_indf_lemma_from_n" />
                <lit v="un1.1" />
              </let>
            </when>
            <otherwise>
              <let>
                <var n="v_indf_lemma_from_n" />
                <lit v="no-lemma-for-sg" />
              </let>
            </otherwise>
          </choose>
        </otherwise>
      </choose>
    </def-macro>
  </section-def-macros>
  <section-rules>
    <rule comment="Def Adj N: def n adj">
      <!--Rule Assistant Description: None-->
      <pattern>
        <pattern-item n="c_def" />
        <pattern-item n="c_n" />
        <pattern-item n="c_adj" />
      </pattern>
      <action>
        <!--Generate and output def-->
        <!--Determine the appropriate lemma for def and store it in a variable named v_def_lemma_from_n.-->
        <call-macro n="m_def_lemma_from_n">
          <with-param pos="2" />
        </call-macro>
        <out>
          <lu>
            <get-case-from pos="1">
              <var n="v_def_lemma_from_n" />
            </get-case-from>
            <clip pos="1" side="tl" part="a_gram_cat" />
          </lu>
        </out>
        <!--Generate and output adj-->
        <!--Determine the appropriate gender tag for adj and store it in a variable named v_adj_gender.-->
        <call-macro n="m_n_gender_or_m-to-adj_gender">
          <with-param pos="2" />
        </call-macro>
        <!--Determine the appropriate number tag for adj and store it in a variable named v_adj_number.-->
        <call-macro n="m_n_number_or_sg-to-adj_number">
          <with-param pos="2" />
        </call-macro>
        <out>
          <b />
          <lu>
            <clip pos="3" side="tl" part="lem" />
            <clip pos="3" side="tl" part="a_gram_cat" />
            <var n="v_adj_gender" />
            <var n="v_adj_number" />
          </lu>
        </out>
        <!--Generate and output n-->
        <out>
          <b />
          <lu>
            <clip pos="2" side="tl" part="lem" />
            <clip pos="2" side="tl" part="a_gram_cat" />
            <clip pos="2" side="tl" part="a_n_number_affixes" />
          </lu>
        </out>
      </action>
    </rule>
    <rule comment="Def Adj N: n adj">
      <!--Rule Assistant Description: None-->
      <pattern>
        <pattern-item n="c_n" />
        <pattern-item n="c_adj" />
      </pattern>
      <action>
        <!--Generate and output adj-->
        <!--Determine the appropriate gender tag for adj and store it in a variable named v_adj_gender.-->
        <call-macro n="m_n_gender_or_m-to-adj_gender">
          <with-param pos="1" />
        </call-macro>
        <!--Determine the appropriate number tag for adj and store it in a variable named v_adj_number.-->
        <call-macro n="m_n_number_or_sg-to-adj_number">
          <with-param pos="1" />
        </call-macro>
        <out>
          <lu>
            <get-case-from pos="1">
              <clip pos="2" side="tl" part="lem" />
            </get-case-from>
            <clip pos="2" side="tl" part="a_gram_cat" />
            <var n="v_adj_gender" />
            <var n="v_adj_number" />
          </lu>
        </out>
        <!--Generate and output n-->
        <out>
          <b />
          <lu>
            <get-case-from pos="2">
              <clip pos="1" side="tl" part="lem" />
            </get-case-from>
            <clip pos="1" side="tl" part="a_gram_cat" />
            <clip pos="1" side="tl" part="a_n_number_affixes" />
          </lu>
        </out>
      </action>
    </rule>
    <rule comment="Def Adj N: def n">
      <!--Rule Assistant Description: None-->
      <pattern>
