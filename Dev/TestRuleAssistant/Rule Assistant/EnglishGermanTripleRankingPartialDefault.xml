<FLExTransRuleGenerator>
    <FLExTransRules>
        <FLExTransRule name="def adj n" create_permutations="yes">
            <Description>number is rank 1 because die (pl) is used often for all genders
case is rank 2 because for a case often the form is the same for all genders </Description>
            <Source>
                <Phrase>
                    <Words>
                        <Word category="def" head="no" id="1">
                            <Features/>
                            <Affixes/>
                        </Word>
                        <Word category="adj" head="no" id="2">
                            <Features/>
                            <Affixes/>
                        </Word>
                        <Word category="n" head="no" id="3">
                            <Features/>
                            <Affixes/>
                        </Word>
                    </Words>
                </Phrase>
            </Source>
            <Target>
                <Phrase>
                    <Words>
                        <Word category="" head="no" id="1">
                            <Features>
<Feature label="number" match="β" ranking="1" unmarked_default="" value=""/>
<Feature label="gender" match="α" ranking="3" unmarked_default="" value=""/>
<Feature label="case" match="γ" ranking="2" unmarked_default="" value=""/>
                            </Features>
                            <Affixes/>
                        </Word>
                        <Word category="" head="no" id="2">
                            <Features/>
                            <Affixes>
<Affix type="suffix">
    <Features>
        <Feature label="gender" match="α" ranking="3" unmarked_default="" value=""/>
        <Feature label="number" match="β" ranking="1" unmarked_default="" value=""/>
        <Feature label="case" match="γ" ranking="2" unmarked_default="" value=""/>
    </Features>
</Affix>
                            </Affixes>
                        </Word>
                        <Word category="" head="yes" id="3">
                            <Features>
<Feature label="gender" match="α" ranking="0" unmarked_default="" value=""/>
                            </Features>
                            <Affixes>
<Affix type="suffix">
    <Features>
        <Feature label="case" match="γ" ranking="2" unmarked_default="nom" value=""/>
        <Feature label="gender" match="α" ranking="3" unmarked_default="" value=""/>
        <Feature label="number" match="β" ranking="1" unmarked_default="sg" value=""/>
    </Features>
</Affix>
                            </Affixes>
                        </Word>
                    </Words>
                </Phrase>
            </Target>
        </FLExTransRule>
    </FLExTransRules>
</FLExTransRuleGenerator>
